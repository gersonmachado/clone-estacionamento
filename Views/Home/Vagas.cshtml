@{
    ViewData["Title"] = "Vagas";
    Layout = "_Layout";
}

<script>

    

    function clicar(element) {
        @* element.innerHTML = "OK - Reservado [Informar dados do usuário]"; *@
        element.innerHTML = '<div class="spinner-border text-success" role="status"><span class="visually-hidden">Loading...</span></div> <br/><a>OK - Reservado [Informar dados do usuário]</a> <br/>';

        // Cria um botão de cancelar
        var cancelButton = document.createElement("button");
        cancelButton.textContent = "Cancelar";
        cancelButton.classList.add('btn', 'btn-danger');
        cancelButton.onclick = function() {
            cancelarReserva();
        };

        element.appendChild(cancelButton);      
    };

    function cancelarReserva() {
        console.log('Cancelado!')
    }
    

</script>

<div class= "text-center">
